.base
  white-space nowrap
  padding 0px 20px
  height 60px
  display flex
  align-items center
  background white

.logo
  height 40px
  cursor pointer

.slogan
  margin-left 20px

.menus
  margin-left 100px

.ad
  &:hover
    color #FF6565

.menu
  margin-right 50px
  cursor pointer
  position relative
  &:hover
    color darken(#63E9EC, 30%)
  &.active
    color #63E9EC
    &::after
      content ''
      display inline-block
      height 2px
      width 56px
      background #63E9EC
      position absolute
      left 0px
      margin-top 36px

@media (max-width: 768px)
  .slogan
    display none
  .menus
    margin-left 40px
  .menu
    margin-right 30px
