.base
  padding 0px 20px
  height 60px
  display flex
  align-items center
  background white

.logo
  height 40px
  cursor pointer

.slogan
  margin-left 20px

.menus
  margin-left 100px

.menu
  margin-right 50px
  cursor pointer
  position relative
  &:hover
    color darken(#63E9EC, 30%)
  &.active
    color #63E9EC
    &::after
      content ''
      display inline-block
      height 2px
      width 56px
      background #63E9EC
      position absolute
      bottom -20px
      left 0px
