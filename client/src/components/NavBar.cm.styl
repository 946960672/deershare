.base
  padding 0px 20px
  height 60px
  display flex
  align-items center
  background white
  box-shadow 0px 2px 4px 0px rgba(255, 255, 255, .5);

.logo
  height 40px
  cursor pointer

.menus
  margin-left 100px

.menu
  margin-right 50px
  cursor pointer
  position relative
  &.active
    color #63E9EC
    &::after
      content ''
      display inline-block
      height 3px
      width 50px
      background #63E9EC
      position absolute
      bottom -20px
      left 3px
